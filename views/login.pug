extend ./header.pug

block content
           
            form( class = 'container p-3 w-50  mt-5' action="/partnerapis/login", method="POST" )         
                    //- if typeof mag != 'undefined'
                    div(class=`alert alert-${theme} alert-dismissible fade show` role="alert")
